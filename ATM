#include <stdio.h>

int main() {
    int pilihan = 0;
    float saldo = 1000000;
    float jumlah;
    int jenisTransfer;
    float biayaAdmin;
    float saldoSementara;
    char rekeningTujuan[20];

    while (pilihan != 5) {

        printf("\n=== MENU ATM ===\n");
        printf("1. Cek Saldo\n");
        printf("2. Tarik Tunai\n");
        printf("3. Setor Tunai\n");
        printf("4. Transfer\n");
        printf("5. Keluar\n");
        printf("Pilih: ");
        scanf("%d", &pilihan);

        if (pilihan == 1) {
            printf("Saldo Anda: Rp %.2f\n", saldo);
        }

        else if (pilihan == 2) {
            printf("Masukkan jumlah penarikan: ");
            scanf("%f", &jumlah);

            if (jumlah > saldo) {
                printf("Jumlah penarikan melebihi batas saldo\n");
            } else {
                saldo -= jumlah;
                printf("Transaksi berhasil. Saldo tersisa: Rp %.2f\n", saldo);
            }
        }

        else if (pilihan == 3) {
            printf("Masukkan jumlah setoran: ");
            scanf("%f", &jumlah);

            saldo += jumlah;
            printf("Transaksi berhasil. Saldo tersisa: Rp %.2f\n", saldo);
        }

        else if (pilihan == 4) {

            printf("Masukkan rekening tujuan: ");
            scanf("%s", rekeningTujuan);

            printf("\nTransfer ke:\n");
            printf("1. Sesama Bank (gratis)\n");
            printf("2. Beda Bank (biaya 6500)\n");
            printf("Pilih jenis transfer: ");
            scanf("%d", &jenisTransfer);

            if (jenisTransfer == 1) {
                biayaAdmin = 0;
            }
            else if (jenisTransfer == 2) {
                biayaAdmin = 6500;
            }
            else {
                printf("Jenis transfer tidak valid!\n");
                continue;
            }

            printf("Masukkan jumlah transfer: ");
            scanf("%f", &jumlah);

            if (jumlah + biayaAdmin > saldo) {
                printf("Saldo tidak mencukupi!\n");
            }
            else {
                saldo -= (jumlah + biayaAdmin);
                printf("Transfer berhasil ke rekening %s.\n", rekeningTujuan);
                printf("Biaya admin: Rp %.2f\n", biayaAdmin);
                printf("Saldo tersisa: Rp %.2f\n", saldo);
            }
        }

        else if (pilihan == 5) {
            printf("Terima kasih telah menggunakan ATM.\n");
        }

        else {
            printf("Pilihan tidak valid!\n");
        }
    }

    return 0;
}
